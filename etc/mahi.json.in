    "maxConnections": 2,
    "bindDN": "LDAP_BIND_DN",
    "bindCredentials": "LDAP_SECRET",
    "timeout": 5000
  },
  "ufdsCfg": {
    "url": "UFDS_URL",
    "bindDN": "UFDS_BIND_DN", 
